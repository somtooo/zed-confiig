// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "terminal": {
    "button": false,
    "dock": "right"
  },
  "show_edit_predictions": false,
  "project_panel": {
    "button": false,
    "hide_gitignore": false,
    "dock": "left",
    "sticky_scroll": false
  },
  "auto_update": false,
  "agent": {
    "button": false,
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "model_parameters": [],
    "default_profile": "ask"
  },
  "vim_mode": true,
  "base_keymap": "JetBrains",
  "relative_line_numbers": true,
  "ui_font_size": 14,
  "buffer_font_size": 13.5,
  "ui_font_family": "Inter",
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Blacklight Blur"
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "outline_panel": {
    "button": false
  },
  "git_panel": {
    "button": false
  },
  "autosave": "on_focus_change",
  "tab_bar": {
    "show": false
  },
  "title_bar": {
    "show_sign_in": false
  },
  "collaboration_panel": {
    "button": false
  },
  "toolbar": {
    "quick_actions": false
  },
  "diagnostics": {
    "button": false
  },
  "search": {
    "button": false
  },
  "debugger": {
    "button": false
  }
}
